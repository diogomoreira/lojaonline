@model List<LojaOnline.MVC.Models.ProdutoCategoria>
@{
    ViewBag.Title = "Listar Produtos";
    List<LojaOnline.MVC.Models.ProdutoCategoria> produtos = ViewBag.Produtos;
}
<h2>Listar Produtos por Categoria</h2>
<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Produtos da categoria</div>

    <!-- Table -->
    <table class="table">
        <thead>
        <tr>
            <th style="text-align: center;">#</th>
            <th>Nome do produto</th>
            <th>Preço</th>
            <th style="text-align: center;">Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (LojaOnline.MVC.Models.ProdutoCategoria produto in @produtos)
        {
            <tr>
                <td style="text-align: center;">@produto.CodigoProduto</td>
                <td style="text-align: left;">@produto.Nome</td>
                <td style="text-align: left;">@produto.Preco</td>
                <td style="text-align: center;">
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Visualizar", "visualizar", "Produto", new { Area = "", Id = @produto.CodigoProduto},null)
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Editar", "Editar", "Produto", new { Area = "Admin", Id = @produto.CodigoProduto},null)
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
